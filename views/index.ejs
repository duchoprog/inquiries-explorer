                      />
                      <label class="form-check-label" for="searchTypeOR">
                        Coincidir con CUALQUIER criterio (más amplio)
                      </label>
                    </div>
                    <div class="form-check">
                      <input
                        class="form-check-input"
                        type="radio"
                        name="searchType"
                        id="searchTypeAND"
                        value="AND"
                      />
                      <label class="form-check-label" for="searchTypeAND">
                        Coincidir con TODOS los criterios (más específico)
                      </label>
                    </div>
                  </div>
                  <div class="col-md-6 mb-3 d-flex justify-content-end gap-2">
                    <button
                      type="button"
                      class="btn btn-secondary btn-lg"
                      onclick="resetForm('productSearchForm')"
                    >
                      Limpiar
                    </button>
                    <button type="submit" class="btn btn-primary btn-lg">
                      Buscar
