<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Búsqueda de Productos</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <style>
      .result-set {
        border: 1px solid #dee2e6;
        border-radius: 0.375rem;
        margin-bottom: 1.5rem;
      }
      .result-header {
        background-color: #f8f9fa;
        padding: 0.75rem 1.25rem;
        border-bottom: 1px solid #dee2e6;
      }
      .result-list {
        list-style-type: none;
        padding: 0;
      }
      .result-list li {
        padding: 0.75rem 1.25rem;
        border-bottom: 1px solid #dee2e6;
        display: flex;
        justify-content: space-between;
        align-items: center;
      }
      .result-list li:last-child {
        border-bottom: none;
      }
      .disabled-record {
        text-decoration: line-through;
        opacity: 0.5;
      }
      #global-actions {
        display: none;
      }
    </style>
  </head>
  <body class="bg-light">
    <div class="container mt-5 mb-5">
      <div class="card">
        <div class="card-header">
          <h2>Búsqueda en Base de Datos de Productos</h2>
        </div>
        <div class="card-body">
          <form id="searchForm">
            <div class="mb-3">
              <label class="form-label fw-bold"
                >PRODUCTO (seleccione hasta 3)</label
              >
              <div class="row">
                <% for(let i = 1; i <= 3; i++) { %>
                <div class="col-md-4">
                  <select
                    class="form-select mb-2"
                    name="producto<%= i %>"
                    id="producto<%= i %>"
                  >
                    <option value="">Seleccione un producto...</option>
                    <% productoOptions.forEach(function(option){ %>
                    <option value="<%= option %>"><%= option %></option>
                    <% }); %>
                  </select>
                </div>
                <% } %>
              </div>
            </div>

            <div class="row mb-3">
              <div class="col-md-6">
                <label for="descripcion" class="form-label fw-bold"
                  >DESCRIPCIÓN</label
                >
                <input
                  type="text"
                  class="form-control"
                  id="descripcion"
                  name="descripcion"
                  placeholder="Buscar en descripciones..."
                />
              </div>
              <div class="col-md-6">
                <label for="material" class="form-label fw-bold"
                  >MATERIAL</label
                >
                <input
                  type="text"
                  class="form-control"
                  id="material"
                  name="material"
                  placeholder="Buscar en materiales..."
                />
              </div>
            </div>

            <div class="row align-items-center">
              <div class="col-md-6 mb-3">
                <label class="form-label fw-bold">Lógica de Búsqueda</label>
                <div class="form-check">
                  <input
                    class="form-check-input"
                    type="radio"
                    name="searchType"
                    id="searchTypeAND"
                    value="AND"
                    checked
                  />
                  <label class="form-check-label" for="searchTypeAND">
                    Coincidir con TODOS los criterios (más específico)
                  </label>
                </div>
                <div class="form-check">
                  <input
                    class="form-check-input"
                    type="radio"
                    name="searchType"
                    id="searchTypeOR"
                    value="OR"
                  />
                  <label class="form-check-label" for="searchTypeOR">
                    Coincidir con CUALQUIER criterio (más amplio)
                  </label>
                </div>
              </div>
              <div class="col-md-6 mb-3 d-flex justify-content-end">
                <button type="submit" class="btn btn-primary btn-lg">
                  Buscar
                </button>
              </div>
            </div>
          </form>
        </div>
      </div>

      <div class="mt-5">
        <div id="global-actions" class="card mb-3">
          <div class="card-body d-flex justify-content-end">
            <button
              class="btn btn-sm btn-outline-secondary me-2"
              onclick="printResults()"
            >
              Imprimir Visibles
            </button>
            <button
              class="btn btn-sm btn-outline-success me-2"
              onclick="exportResults()"
            >
              Exportar Visibles a XLSX
            </button>
            <button class="btn btn-sm btn-outline-info" onclick="displayAll()">
              Mostrar Todos los Registros
            </button>
          </div>
        </div>
        <div id="results-container"></div>
      </div>
    </div>

    <script>
      const searchForm = document.getElementById("searchForm");
      const resultsContainer = document.getElementById("results-container");
      const globalActions = document.getElementById("global-actions");
      let currentResultSets = [];

      searchForm.addEventListener("submit", async (e) => {
        e.preventDefault();
        const formData = new FormData(searchForm);
        const data = Object.fromEntries(formData.entries());
        const response = await fetch("/search", {
          method: "POST",
          headers: { "Content-Type": "application/x-www-form-urlencoded" },
          body: new URLSearchParams(data),
        });
        const newResultSet = await response.json();
        let addToExisting = false;
        if (currentResultSets.length > 0) {
          addToExisting = confirm(
            "¿Desea agregar estos resultados a la lista existente? (Cancelar para reemplazar)"
          );
        }
        if (addToExisting) {
          currentResultSets.push(newResultSet);
        } else {
          currentResultSets = [newResultSet];
        }
        renderResults();
      });

      function renderResults() {
        resultsContainer.innerHTML = "";
        if (
          currentResultSets.some((set) => set.results && set.results.length > 0)
        ) {
          globalActions.style.display = "block";
        } else {
          globalActions.style.display = "none";
        }
        currentResultSets.forEach((set) => {
          if (!set.results || set.results.length === 0) return;
          const resultSetDiv = document.createElement("div");
          resultSetDiv.className = "result-set";
          const header = `
                    <div class="result-header">
                        <h5 class="mb-0">Resultados de la Búsqueda</h5>
                        <small class="text-muted">${set.title}</small>
                    </div>
                `;
          const list = document.createElement("ul");
          list.className = "result-list";
          set.results.forEach((record) => {
            const li = document.createElement("li");
            li.dataset.id = record.id;
            li.innerHTML = `
                        <div>
                            <a href="${
                              record.url || "#"
                            }" target="_blank" class="fw-bold">${
              record.project || "Sin Proyecto"
            }</a>
                            <div>
                                <strong>${
                                  record.producto || "N/A"
                                }</strong> (ID: ${record.id}) - ${
              record.company_name || "N/A"
            }
                            </div>
                            <p class="mb-0 text-muted small">${
                              record.product_description || ""
                            }</p>
                        </div>
                        <button class="btn btn-sm btn-outline-danger" onclick="disableRecord(this)">Ocultar</button>
                    `;
            list.appendChild(li);
          });
          resultSetDiv.innerHTML = header;
          resultSetDiv.appendChild(list);
          resultsContainer.appendChild(resultSetDiv);
        });
      }

      function disableRecord(button) {
        button.parentElement.classList.add("disabled-record");
      }

      function displayAll() {
        resultsContainer.querySelectorAll(".disabled-record").forEach((el) => {
          el.classList.remove("disabled-record");
        });
      }

      function printResults() {
        const printableContent = document.createElement("div");
        resultsContainer.querySelectorAll(".result-set").forEach((set) => {
          const clone = set.cloneNode(true);
          clone
            .querySelectorAll("li:not(.disabled-record) button")
            .forEach((btn) => btn.remove());
          clone
            .querySelectorAll(".disabled-record")
            .forEach((el) => el.remove());
          printableContent.appendChild(clone);
        });
        const printWindow = window.open("", "_blank");
        printWindow.document.write(
          "<html><head><title>Resultados para Imprimir</title>"
        );
        printWindow.document.write(
          '<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">'
        );
        printWindow.document.write(
          "<style>.result-list li { display: block; }</style>"
        );
        printWindow.document.write("</head><body>");
        printWindow.document.write(printableContent.innerHTML);
        printWindow.document.write("</body></html>");
        printWindow.document.close();
        printWindow.print();
      }

      async function exportResults() {
        const idsToExport = Array.from(resultsContainer.querySelectorAll("li"))
          .filter((li) => !li.classList.contains("disabled-record"))
          .map((li) => li.dataset.id);
        if (idsToExport.length === 0) {
          alert("No hay registros visibles para exportar.");
          return;
        }
        const response = await fetch("/export", {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({ ids: idsToExport }),
        });
        if (response.ok) {
          const blob = await response.blob();
          const url = window.URL.createObjectURL(blob);
          const a = document.createElement("a");
          a.style.display = "none";
          a.href = url;
          a.download = "productos.xlsx";
          document.body.appendChild(a);
          a.click();
          window.URL.revokeObjectURL(url);
        } else {
          alert("Error al exportar los datos.");
        }
      }
    </script>
  </body>
</html>
