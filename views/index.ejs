<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>GBP Búsquedas</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <style>
      .result-set {
        border: 1px solid #dee2e6;
        border-radius: 0.375rem;
        margin-bottom: 1.5rem;
      }
      .result-header {
        background-color: #f8f9fa;
        padding: 0.75rem 1.25rem;
        border-bottom: 1px solid #dee2e6;
      }
      .result-list {
        list-style-type: none;
        padding: 0;
      }
      .result-list li {
        padding: 1rem;
        border-bottom: 1px solid #dee2e6;
        display: flex !important; /* Override any other display values */
        justify-content: space-between;
        align-items: start;
        gap: 15px;
      }
      .result-list li:last-child {
        border-bottom: none;
      }
      .disabled-record {
        text-decoration: none !important; /* Remove the strikethrough */
        opacity: 0.5;
        background-color: #f8f9fa;
      }
      li {
        margin-top: 0, 5rem;
        border: 1px solid #99b;
      }
      #global-actions {
        display: none;
      }
      .form-control,
      .form-select,
      .form-label {
        font-size: 0.8rem;
      }
    </style>
  </head>
  <body class="bg-light">
    <div class="container mt-5 mb-5">
      <div class="card">
        <div class="card-header">
          <h2>Búsquedas en Base de Datos</h2>
        </div>
        <div class="card-body">
          <ul class="nav nav-tabs" id="searchTab" role="tablist">
            <li class="nav-item" role="presentation">
              <button
                class="nav-link active"
                id="products-tab"
                data-bs-toggle="tab"
                data-bs-target="#products-tab-pane"
                type="button"
                role="tab"
                aria-controls="products-tab-pane"
                aria-selected="true"
              >
                Búsqueda en Inquiries
              </button>
            </li>
            <li class="nav-item" role="presentation">
              <button
                class="nav-link"
                id="invoices-tab"
                data-bs-toggle="tab"
                data-bs-target="#invoices-tab-pane"
                type="button"
                role="tab"
                aria-controls="invoices-tab-pane"
                aria-selected="false"
              >
                Búsqueda en Invoices
              </button>
            </li>
          </ul>
          <div class="tab-content pt-3" id="searchTabContent">
            <div
              class="tab-pane fade show active"
              id="products-tab-pane"
              role="tabpanel"
              aria-labelledby="products-tab"
              tabindex="0"
            >
              <!-- Product Search Form -->
              <form id="productSearchForm">
                <div class="mb-3">
                  <label class="form-label fw-bold"
                    >PRODUCTO (seleccione hasta 5)</label
                  >
                  <div class="row">
                    <% for(let i = 1; i <= 5; i++) { %>
                    <div class="col">
                      <select
                        class="form-select mb-2"
                        name="producto<%= i %>"
                        id="producto<%= i %>"
                      >
                        <option value="">Seleccione un producto...</option>
                        <% productoOptions.forEach(function(option){ %>
                        <option value="<%= option %>"><%= option %></option>
                        <% }); %>
                      </select>
                    </div>
                    <% } %>
                  </div>
                </div>

                <div class="mb-3">
                  <label class="form-label fw-bold">DESCRIPCIÓN</label>
                  <div class="row">
                    <% for(let i = 1; i <= 5; i++) { %>
                    <div class="col">
                      <input
                        type="text"
                        class="form-control"
                        id="descripcion<%= i %>"
                        name="descripcion<%= i %>"
                        placeholder="Descripción <%= i %>"
                      />
                    </div>
                    <% } %>
                  </div>
                </div>

                <div class="mb-3">
                  <label class="form-label fw-bold">MATERIAL</label>
                  <div class="row">
                    <% for(let i = 1; i <= 5; i++) { %>
                    <div class="col">
                      <input
                        type="text"
                        class="form-control"
                        id="material<%= i %>"
                        name="material<%= i %>"
                        placeholder="Material <%= i %>"
                      />
                    </div>
                    <% } %>
                  </div>
                </div>

                <div class="mb-3">
                  <div class="row">
                    <div class="col">
                      <label class="form-label fw-bold">ORIGEN</label>
                    </div>
                    <div class="col"></div>
                    <div class="col"></div>
                    <div class="col"></div>
                    <div class="col">
                      <label class="form-label fw-bold text-danger"
                        >ORIGEN NO ES</label
                      >
                    </div>
                  </div>
                  <div class="row">
                    <% for(let i = 1; i <= 4; i++) { %>
                    <div class="col">
                      <input
                        type="text"
                        class="form-control"
                        id="origen<%= i %>"
                        name="origen<%= i %>"
                        placeholder="Origen <%= i %>"
                      />
                    </div>
                    <% } %>
                    <div class="col">
                      <input
                        type="text"
                        class="form-control"
                        id="origen5"
                        name="origen5"
                        placeholder="Origen a excluir"
                      />
                    </div>
                  </div>
                </div>

                <div class="row align-items-center">
                  <div class="col-md-6 mb-3">
                    <label class="form-label fw-bold">Lógica de Búsqueda</label>
                    <div class="form-check">
                      <input
                        class="form-check-input"
                        type="radio"
                        name="searchType"
                        id="searchTypeOR"
                        value="OR"
                        checked
                      />
                      <label class="form-check-label" for="searchTypeOR">
                        Coincidir con CUALQUIER criterio (más amplio)
                      </label>
                    </div>
                    <div class="form-check">
                      <input
                        class="form-check-input"
                        type="radio"
                        name="searchType"
                        id="searchTypeAND"
                        value="AND"
                      />
                      <label class="form-check-label" for="searchTypeAND">
                        Coincidir con TODOS los criterios (más específico)
                      </label>
                    </div>
                  </div>
                  <div class="col-md-6 mb-3 d-flex justify-content-end gap-2">
                    <button
                      type="button"
                      class="btn btn-secondary btn-lg"
                      onclick="resetForm('productSearchForm')"
                    >
                      Limpiar
                    </button>
                    <button type="submit" class="btn btn-primary btn-lg">
                      Buscar
                    </button>
                  </div>
                </div>
              </form>
            </div>
            <div
              class="tab-pane fade"
              id="invoices-tab-pane"
              role="tabpanel"
              aria-labelledby="invoices-tab"
              tabindex="0"
            >
              <!-- Invoice Search Form -->
              <form id="invoiceSearchForm">
                <div class="mb-3">
                  <label class="form-label fw-bold">PROYECTO</label>
                  <div class="row">
                    <% for(let i = 1; i <= 5; i++) { %>
                    <div class="col">
                      <input
                        type="text"
                        class="form-control"
                        id="proyecto_inv_<%= i %>"
                        name="proyecto_inv_<%= i %>"
                        placeholder="Proyecto <%= i %>"
                      />
                    </div>
                    <% } %>
                  </div>
                </div>

                <div class="mb-3">
                  <label class="form-label fw-bold"
                    >PRODUCTO (seleccione hasta 5)</label
                  >
                  <div class="row">
                    <% for(let i = 1; i <= 5; i++) { %>
                    <div class="col">
                      <select
                        class="form-select mb-2"
                        name="producto_inv_<%= i %>"
                        id="producto_inv_<%= i %>"
                      >
                        <option value="">Seleccione un producto...</option>
                        <% productoOptions.forEach(function(option){ %>
                        <option value="<%= option %>"><%= option %></option>
                        <% }); %>
                      </select>
                    </div>
                    <% } %>
                  </div>
                </div>

                <div class="mb-3">
                  <label class="form-label fw-bold">DESCRIPCIÓN</label>
                  <div class="row">
                    <% for(let i = 1; i <= 5; i++) { %>
                    <div class="col">
                      <input
                        type="text"
                        class="form-control"
                        id="descripcion_inv_<%= i %>"
                        name="descripcion_inv_<%= i %>"
                        placeholder="Descripción <%= i %>"
                      />
                    </div>
                    <% } %>
                  </div>
                </div>

                <div class="mb-3">
                  <div class="row">
                    <div class="col">
                      <label class="form-label fw-bold">ORIGEN</label>
                    </div>
                    <div class="col"></div>
                    <div class="col"></div>
                    <div class="col"></div>
                    <div class="col">
                      <label class="form-label fw-bold text-danger"
                        >ORIGEN NO ES</label
                      >
                    </div>
                  </div>
                  <div class="row">
                    <% for(let i = 1; i <= 4; i++) { %>
                    <div class="col">
                      <input
                        type="text"
                        class="form-control"
                        id="origen_inv_<%= i %>"
                        name="origen_inv_<%= i %>"
                        placeholder="Origen <%= i %>"
                      />
                    </div>
                    <% } %>
                    <div class="col">
                      <input
                        type="text"
                        class="form-control"
                        id="origen_inv_5"
                        name="origen_inv_5"
                        placeholder="Origen a excluir"
                      />
                    </div>
                  </div>
                </div>

                <div class="row align-items-center">
                  <div class="col-md-6 mb-3">
                    <label class="form-label fw-bold">Lógica de Búsqueda</label>
                    <div class="form-check">
                      <input
                        class="form-check-input"
                        type="radio"
                        name="searchTypeInv"
                        id="searchTypeORInv"
                        value="OR"
                        checked
                      />
                      <label class="form-check-label" for="searchTypeORInv">
                        Coincidir con CUALQUIER criterio (más amplio)
                      </label>
                    </div>
                    <div class="form-check">
                      <input
                        class="form-check-input"
                        type="radio"
                        name="searchTypeInv"
                        id="searchTypeANDInv"
                        value="AND"
                      />
                      <label class="form-check-label" for="searchTypeANDInv">
                        Coincidir con TODOS los criterios (más específico)
                      </label>
                    </div>
                  </div>
                  <div class="col-md-6 mb-3 d-flex justify-content-end gap-2">
                    <button
                      type="button"
                      class="btn btn-secondary btn-lg"
                      onclick="resetForm('invoiceSearchForm')"
                    >
                      Limpiar
                    </button>
                    <button type="submit" class="btn btn-primary btn-lg">
                      Buscar
                    </button>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>

      <div class="mt-5">
        <div id="global-actions" class="card mb-3">
          <div class="card-body d-flex justify-content-end">
            <button
              class="btn btn-sm btn-outline-secondary me-2"
              onclick="printResults()"
            >
              Imprimir Visibles
            </button>
            <button
              class="btn btn-sm btn-outline-success me-2"
              onclick="exportResults()"
            >
              Exportar Visibles a XLSX
            </button>
            <button class="btn btn-sm btn-outline-info" onclick="displayAll()">
              Mostrar Todos los Registros
            </button>
          </div>
        </div>
        <div id="results-container"></div>
      </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
      const productSearchForm = document.getElementById("productSearchForm");
      const invoiceSearchForm = document.getElementById("invoiceSearchForm");
      const resultsContainer = document.getElementById("results-container");
      const globalActions = document.getElementById("global-actions");
      let currentResultSets = [];

      function resetForm(formId) {
        const form = document.getElementById(formId);
        if (form) {
          form.reset();
        }

        // For now, only a product form reset should clear the results.
        if (formId === "productSearchForm") {
          currentResultSets = [];
          resultsContainer.innerHTML = "";
          globalActions.style.display = "none";
        }
      }

      function makeClickableIfValid(value) {
        if (!value || value === "N/A") return value;

        // Check if it's an email address
        if (value.includes("@")) {
          return `<a href="mailto:${value}" class="text-decoration-none">${value}</a>`;
        }

        // Check if it's a website URL (has a top-level domain)
        const urlPattern =
          /^(https?:\/\/)?([\da-z\.-]+\.)+([a-z\.]{2,6})([\/\w \.-]*)*\/?$/i;
        if (urlPattern.test(value)) {
          // Add http:// if no protocol is specified
          const href = value.startsWith("http") ? value : `http://${value}`;
          return `<a href="${href}" target="_blank" class="text-decoration-none">${value}</a>`;
        }

        return value;
      }

      productSearchForm.addEventListener("submit", async (e) => {
        e.preventDefault();
        console.log("Submitting product search form...");
        const formData = new FormData(productSearchForm);
        const data = Object.fromEntries(formData.entries());
        const response = await fetch("/search", {
          method: "POST",
          headers: { "Content-Type": "application/x-www-form-urlencoded" },
          body: new URLSearchParams(data),
        });
        const newResultSet = await response.json();
        newResultSet.type = newResultSet.type || "products";
        let addToExisting = false;
        if (currentResultSets.length > 0) {
          addToExisting = confirm(
            "¿Desea agregar estos resultados a la lista existente? (Cancelar para reemplazar)"
          );
        }
        if (addToExisting) {
          currentResultSets.push(newResultSet);
        } else {
          currentResultSets = [newResultSet];
        }
        renderResults();
      });

      invoiceSearchForm.addEventListener("submit", async (e) => {
        e.preventDefault();
        const formData = new FormData(invoiceSearchForm);
        const data = Object.fromEntries(formData.entries());
        const response = await fetch("/search-invoices", {
          method: "POST",
          headers: { "Content-Type": "application/x-www-form-urlencoded" },
          body: new URLSearchParams(data),
        });
        const newResultSet = await response.json();
        newResultSet.type = newResultSet.type || "invoices";
        let addToExisting = false;
        if (currentResultSets.length > 0) {
          addToExisting = confirm(
            "¿Desea agregar estos resultados a la lista existente? (Cancelar para reemplazar)"
          );
        }
        if (addToExisting) {
          currentResultSets.push(newResultSet);
        } else {
          currentResultSets = [newResultSet];
        }
        renderResults();
      });

      function renderResults() {
        resultsContainer.innerHTML = "";
        if (
          currentResultSets.some((set) => set.results && set.results.length > 0)
        ) {
          globalActions.style.display = "block";
        } else {
          globalActions.style.display = "none";
        }

        if (currentResultSets.length === 0) return;

        // Check if all result sets are empty
        const allEmpty = currentResultSets.every(
          (set) => !set.results || set.results.length === 0
        );

        if (allEmpty) {
          const noResultsDiv = document.createElement("div");
          noResultsDiv.className = "alert alert-info text-center";
          noResultsDiv.innerHTML = `
      <h4 class="alert-heading">No se encontraron resultados</h4>
      <p class="mb-0">Intente con diferentes criterios de búsqueda.</p>
    `;
          resultsContainer.appendChild(noResultsDiv);
          return;
        }

        currentResultSets.forEach((set) => {
          if (!set.results || set.results.length === 0) return;
          const resultSetDiv = document.createElement("div");
          resultSetDiv.className = "result-set";
          const header = `
      <div class="result-header">
        <h5 class="mb-0">Resultados de la Búsqueda</h5>
        <small class="text-muted">${set.title}</small>
      </div>
    `;
          const list = document.createElement("ul");
          list.className = "result-list";
          set.results.forEach((record) => {
            const li =
              set.type === "invoices"
                ? renderInvoiceCard(record)
                : renderProductCard(record);
            if (li) list.appendChild(li);
          });
          resultSetDiv.innerHTML = header;
          resultSetDiv.appendChild(list);
          resultsContainer.appendChild(resultSetDiv);
        });
      }

      function renderProductCard(record) {
        const li = document.createElement("li");
        li.dataset.id = record.id;
        li.style.display = "flex";
        li.style.alignItems = "start";
        li.style.gap = "15px";
        li.innerHTML = `
        <div style="flex: 60%">
          <a href="${record.url || "#"}" target="_blank" class="fw-bold">${record.project || "Sin Proyecto"}</a>
          <div class="mt-2">
            <div><u>Company Name:</u> ${record.company_name || "N/A"} <span class="text-muted">|</span> <u>Contact:</u> ${makeClickableIfValid(record.sales_contact)}</div>
            <div><u>Wechat:</u> ${record.wechat || "N/A"} <span class="text-muted">|</span> <u>Email:</u> ${makeClickableIfValid(record.email)}</div>
            <div><u>Description:</u> ${record.product_description || "N/A"}</div>
            <div><u>Real description:</u> ${record.product_real_description || "N/A"}</div>
            <div class="d-flex gap-3">
              <span><u>Quantity:</u> ${record.quantity || "N/A"}</span>
              <span><u>Price:</u> $${record.price_usd || "N/A"}</span>
              <span><u>Origin:</u> ${record.origen || "N/A"}</span>
            </div>
          </div>
        </div>
        <div style="flex: 25%" class="text-center">
          <img src="${record.product_real_pictures || record.reference_picture || "#"}" 
               alt="Product Image" 
               class="img-fluid"
               style="max-height: 150px"
               onerror="this.style.display='none'">
        </div>
        <div style="flex: 15%" class="text-end d-flex flex-column gap-2">
          <button class="btn btn-sm btn-outline-danger" onclick="disableRecord(this)">Ocultar</button>
        </div>
      `;
        return li;
      }

      function renderInvoiceCard(record) {
        const li = document.createElement("li");
        li.dataset.id = record.id;
        li.style.display = "flex";
        li.style.alignItems = "start";
        li.style.gap = "15px";

        const imageUrl =
          record.imagen ||
          record.img2 ||
          record.img3 ||
          record.img4 ||
          record.img5 ||
          record.img6 ||
          record.img7 ||
          record.img8 ||
          record.img9 ||
          record.img10 ||
          record.img11 ||
          "#";

        li.innerHTML = `
        <div style="flex: 60%">
          <a href="${record.file_url || "#"}" target="_blank" class="fw-bold">ORIGINAL DOCUMENT</a>
          <div class="mt-2">
            <div><u>Company Name:</u> ${record.proveedor || "N/A"} <span class="text-muted">|</span> <u>Contact:</u> ${record.persona_de_contacto || "N/A"}</div>
            <div><u>Wechat:</u> ${record.wechat_telefono || "N/A"} <span class="text-muted">|</span> <u>Email:</u> ${makeClickableIfValid(record.correo)}</div>
            <div><u>Description:</u> ${record.producto || "N/A"}; ${record.descripcion || "N/A"}</div>
            <div class="d-flex gap-3">
              <span><u>Quantity:</u> ${record.cantidad || "N/A"}</span>
              <span><u>Price:</u> $${record.precio || "N/A"}</span>
              <span><u>Origin:</u> ${record.pais || "N/A"}</span>
            </div>
          </div>
        </div>
        <div style="flex: 25%" class="text-center">
          <img src="${imageUrl}" 
               alt="Invoice Image" 
               class="img-fluid"
               style="max-height: 150px"
               onerror="this.style.display='none'">
        </div>
        <div style="flex: 15%" class="d-flex flex-column align-items-end gap-2">
          <button class="btn btn-sm btn-outline-danger" onclick="disableRecord(this)">Ocultar</button>
          ${
            record.proyecto
              ? `<button class="btn btn-sm btn-outline-primary" onclick="searchInquiryByProject('${(record.proyecto || "").replace(/'/g, "\\'")}')">Buscar Inquiry para ${record.proyecto}</button>`
              : ""
          }
        </div>
      `;
        return li;
      }

      function disableRecord(button) {
        const listItem = button.closest("li");
        if (listItem) {
          listItem.classList.add("disabled-record");
        }
      }

      function displayAll() {
        resultsContainer.querySelectorAll(".disabled-record").forEach((el) => {
          el.classList.remove("disabled-record");
        });
      }

      function printResults() {
        const printableContent = document.createElement("div");
        resultsContainer.querySelectorAll(".result-set").forEach((set) => {
          const clone = set.cloneNode(true);
          clone
            .querySelectorAll("li:not(.disabled-record) button")
            .forEach((btn) => btn.remove());
          clone
            .querySelectorAll(".disabled-record")
            .forEach((el) => el.remove());
          printableContent.appendChild(clone);
        });
        const printWindow = window.open("", "_blank");
        printWindow.document.write(
          "<html><head><title>Resultados para Imprimir</title>"
        );
        printWindow.document.write(
          '<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">'
        );
        printWindow.document.write(
          "<style>.result-list li { display: block; }</style>"
        );
        printWindow.document.write("</head><body>");
        printWindow.document.write(printableContent.innerHTML);
        printWindow.document.write("</body></html>");
        printWindow.document.close();
        printWindow.print();
      }

      async function exportResults() {
        const idsToExport = Array.from(
          resultsContainer.querySelectorAll("li")
        )
          .filter((li) => !li.classList.contains("disabled-record"))
          .map((li) => li.dataset.id);
        if (idsToExport.length === 0) {
          alert("No hay registros visibles para exportar.");
          return;
        }
        const response = await fetch("/export", {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({ ids: idsToExport }),
        });
        if (response.ok) {
          const blob = await response.blob();
          const url = window.URL.createObjectURL(blob);
          const a = document.createElement("a");
          a.style.display = "none";
          a.href = url;
          a.download = "productos.xlsx";
          document.body.appendChild(a);
          a.click();
          window.URL.revokeObjectURL(url);
        } else {
          alert("Error al exportar los datos.");
        }
      }

      function searchInquiryByProject(proyecto) {
        alert(`Búsqueda por proyecto pendiente de implementar (${proyecto})`);
      }

    </script>
  </body>
</html>
