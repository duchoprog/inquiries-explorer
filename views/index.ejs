                <div class="mb-3">
                  <label class="form-label fw-bold">DESCRIPCIÓN</label>
                  <div class="row">
                    <% for(let i = 1; i <= 5; i++) { %>
                    <div class="col">
                      <input
                        type="text"
                        class="form-control"
                        id="descripcion_inv_<%= i %>"
                        name="descripcion_inv_<%= i %>"
                        placeholder="Descripción <%= i %>"
                      />
                    </div>
                    <% } %>
                  </div>
                </div>

                <div class="mb-3">
                  <div class="row">
                    <div class="col">
                      <label class="form-label fw-bold">ORIGEN</label>
                    </div>
                    <div class="col"></div>
                    <div class="col"></div>
                    <div class="col"></div>
                    <div class="col">
                      <label class="form-label fw-bold text-danger"
                        >ORIGEN NO ES</label
                      >
                    </div>
                  </div>
                  <div class="row">
                    <% for(let i = 1; i <= 4; i++) { %>
                    <div class="col">
