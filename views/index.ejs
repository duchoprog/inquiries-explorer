              </form>

              <!-- Invoice Results Area with sub-tabs -->
              <div class="mt-4">
                <ul class="nav nav-tabs" id="invoiceTabsNav" role="tablist">
                  <li class="nav-item" role="presentation">
                    <button
                      class="nav-link active"
                      id="invoice-main-tab"
                      data-bs-toggle="tab"
                      data-bs-target="#invoice-main-pane"
                      type="button"
                      role="tab"
                      aria-controls="invoice-main-pane"
                      aria-selected="true"
                    >
                      Resultados de Invoices
                    </button>
                  </li>
                </ul>
                <div class="tab-content" id="invoiceTabsContent">
                  <div
                    class="tab-pane fade show active"
                    id="invoice-main-pane"
                    role="tabpanel"
                    aria-labelledby="invoice-main-tab"
                    tabindex="0"
                  >
                    <div class="card mb-3 mt-3">
                      <div class="card-body d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Resultados de Invoices (General)</h5>
                        <div class="d-flex gap-2">
