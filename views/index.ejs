    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
      const productSearchForm = document.getElementById("productSearchForm");
      const invoiceSearchForm = document.getElementById("invoiceSearchForm");
      const resultsProducts = document.getElementById("results-products");
      const resultsInvoices = document.getElementById("results-invoices");
      const invoiceTabsNav = document.getElementById("invoiceTabsNav");
      const invoiceTabsContent = document.getElementById("invoiceTabsContent");

      let productResultSets = [];
      let invoiceResultSets = [];
      const invoiceProjectTabs = new Map(); // tabId -> { proyecto, slug, invoiceCardHtml, results: [] }

      function resetForm(formId) {
        const form = document.getElementById(formId);
        if (form) {
          form.reset();
        }

        // For now, only a product form reset should clear the results.
        if (formId === "productSearchForm") {
          productResultSets = [];
          resultsProducts.innerHTML = "";
        }
        if (formId === "invoiceSearchForm") {
          invoiceResultSets = [];
          resultsInvoices.innerHTML = "";
        }
      }

      function makeClickableIfValid(value) {
        if (!value || value === "N/A") return value;

        // Check if it's an email address
        if (value.includes("@")) {
          return `<a href="mailto:${value}" class="text-decoration-none">${value}</a>`;
        }

        // Check if it's a website URL (has a top-level domain)
        const urlPattern =
          /^(https?:\/\/)?([\da-z\.-]+\.)+([a-z\.]{2,6})([\/\w \.-]*)*\/?$/i;
        if (urlPattern.test(value)) {
          // Add http:// if no protocol is specified
          const href = value.startsWith("http") ? value : `http://${value}`;
          return `<a href="${href}" target="_blank" class="text-decoration-none">${value}</a>`;
        }

        return value;
      }

      productSearchForm.addEventListener("submit", async (e) => {
        e.preventDefault();
        console.log("Submitting product search form...");
        const formData = new FormData(productSearchForm);
        const data = Object.fromEntries(formData.entries());
        const response = await fetch("/search", {
          method: "POST",
          headers: { "Content-Type": "application/x-www-form-urlencoded" },
          body: new URLSearchParams(data),
        });
        const newResultSet = await response.json();
        newResultSet.type = newResultSet.type || "products";
        let addToExisting = false;
        if (productResultSets.length > 0) {
          addToExisting = confirm(
            "¿Desea agregar estos resultados a la lista existente? (Cancelar para reemplazar)"
          );
        }
        if (addToExisting) {
          productResultSets.push(newResultSet);
        } else {
          productResultSets = [newResultSet];
        }
        renderProductResults();
      });

      invoiceSearchForm.addEventListener("submit", async (e) => {
        e.preventDefault();
        const formData = new FormData(invoiceSearchForm);
        const data = Object.fromEntries(formData.entries());
        const response = await fetch("/search-invoices", {
          method: "POST",
          headers: { "Content-Type": "application/x-www-form-urlencoded" },
          body: new URLSearchParams(data),
        });
        const newResultSet = await response.json();
        newResultSet.type = newResultSet.type || "invoices";
        let addToExisting = false;
        if (invoiceResultSets.length > 0) {
          addToExisting = confirm(
            "¿Desea agregar estos resultados a la lista existente? (Cancelar para reemplazar)"
          );
        }
        if (addToExisting) {
          invoiceResultSets.push(newResultSet);
        } else {
          invoiceResultSets = [newResultSet];
        }
        renderInvoiceResults();
      });

      function renderProductResults() {
        resultsProducts.innerHTML = "";

        if (
          productResultSets.length === 0 ||
          productResultSets.every((set) => !set.results || set.results.length === 0)
        ) {
          const noResultsDiv = document.createElement("div");
          noResultsDiv.className = "alert alert-info text-center";
          noResultsDiv.innerHTML = `
      <h4 class="alert-heading">No se encontraron resultados</h4>
      <p class="mb-0">Intente con diferentes criterios de búsqueda.</p>
    `;
          resultsProducts.appendChild(noResultsDiv);
          return;
        }

        productResultSets.forEach((set) => {
          if (!set.results || set.results.length === 0) return;
          const resultSetDiv = document.createElement("div");
          resultSetDiv.className = "result-set";
          const header = `
      <div class="result-header">
        <h5 class="mb-0">Resultados de la Búsqueda</h5>
        <small class="text-muted">${set.title}</small>
      </div>
    `;
          const list = document.createElement("ul");
          list.className = "result-list";
          set.results.forEach((record) => {
            const li = renderProductCard(record);
            if (li) list.appendChild(li);
          });
          resultSetDiv.innerHTML = header;
          resultSetDiv.appendChild(list);
          resultsProducts.appendChild(resultSetDiv);
        });
      }

      function renderInvoiceResults() {
        resultsInvoices.innerHTML = "";

        if (
          invoiceResultSets.length === 0 ||
          invoiceResultSets.every((set) => !set.results || set.results.length === 0)
        ) {
          const noResultsDiv = document.createElement("div");
          noResultsDiv.className = "alert alert-info text-center";
          noResultsDiv.innerHTML = `
      <h4 class="alert-heading">No se encontraron resultados</h4>
      <p class="mb-0">Intente con diferentes criterios de búsqueda.</p>
    `;
          resultsInvoices.appendChild(noResultsDiv);
          return;
        }

        invoiceResultSets.forEach((set) => {
          if (!set.results || set.results.length === 0) return;
          const resultSetDiv = document.createElement("div");
          resultSetDiv.className = "result-set";
          const header = `
      <div class="result-header">
        <h5 class="mb-0">Resultados de la Búsqueda</h5>
        <small class="text-muted">${set.title}</small>
      </div>
    `;
          const list = document.createElement("ul");
          list.className = "result-list";
          set.results.forEach((record) => {
            const li = renderInvoiceCard(record);
            if (li) list.appendChild(li);
          });
          resultSetDiv.innerHTML = header;
          resultSetDiv.appendChild(list);
          resultsInvoices.appendChild(resultSetDiv);
        });
      }

      function renderProductCard(record) {
        const li = document.createElement("li");
        li.dataset.id = record.id;
        li.style.display = "flex";
        li.style.alignItems = "start";
        li.style.gap = "15px";
        li.innerHTML = `
        <div style="flex: 60%">
          <a href="${record.url || "#"}" target="_blank" class="fw-bold">${record.project || "Sin Proyecto"}</a>
          <div class="mt-2">
            <div><u>Company Name:</u> ${record.company_name || "N/A"} <span class="text-muted">|</span> <u>Contact:</u> ${makeClickableIfValid(record.sales_contact)}</div>
            <div><u>Wechat:</u> ${record.wechat || "N/A"} <span class="text-muted">|</span> <u>Email:</u> ${makeClickableIfValid(record.email)}</div>
            <div><u>Description:</u> ${record.product_description || "N/A"}</div>
            <div><u>Real description:</u> ${record.product_real_description || "N/A"}</div>
            <div class="d-flex gap-3">
              <span><u>Quantity:</u> ${record.quantity || "N/A"}</span>
              <span><u>Price:</u> $${record.price_usd || "N/A"}</span>
              <span><u>Origin:</u> ${record.origen || "N/A"}</span>
            </div>
          </div>
        </div>
        <div style="flex: 25%" class="text-center">
          <img src="${record.product_real_pictures || record.reference_picture || "#"}" 
               alt="Product Image" 
               class="img-fluid"
               style="max-height: 150px"
               onerror="this.style.display='none'">
        </div>
        <div style="flex: 15%" class="text-end d-flex flex-column gap-2">
          <button class="btn btn-sm btn-outline-danger" onclick="disableRecord(this)">Ocultar</button>
        </div>
      `;
        return li;
      }

      function renderInvoiceCard(record) {
        const li = document.createElement("li");
        li.dataset.id = record.id;
        li.style.display = "flex";
        li.style.alignItems = "start";
        li.style.gap = "15px";

      const imageUrl =
          record.imagen ||
          record.img2 ||
          record.img3 ||
          record.img4 ||
          record.img5 ||
          record.img6 ||
          record.img7 ||
          record.img8 ||
          record.img9 ||
          record.img10 ||
          record.img11 ||
          "#";

        const sanitizedProyecto = sanitizeProyectoId(record.proyecto || "");
        const hasProyecto = sanitizedProyecto !== "";

        li.innerHTML = `
        <div style="flex: 60%">
          <a href="${record.file_url || "#"}" target="_blank" class="fw-bold">ORIGINAL DOCUMENT</a>
          <div class="mt-2">
            <div><u>Company Name:</u> ${record.proveedor || "N/A"} <span class="text-muted">|</span> <u>Contact:</u> ${record.persona_de_contacto || "N/A"}</div>
            <div><u>Wechat:</u> ${record.wechat_telefono || "N/A"} <span class="text-muted">|</span> <u>Email:</u> ${makeClickableIfValid(record.correo)}</div>
            <div><u>Description:</u> ${record.producto || "N/A"}; ${record.descripcion || "N/A"}</div>
            <div class="d-flex gap-3">
              <span><u>Quantity:</u> ${record.cantidad || "N/A"}</span>
              <span><u>Price:</u> $${record.precio || "N/A"}</span>
              <span><u>Origin:</u> ${record.pais || "N/A"}</span>
            </div>
          </div>
        </div>
        <div style="flex: 25%" class="text-center">
          <img src="${imageUrl}" 
               alt="Invoice Image" 
               class="img-fluid"
               style="max-height: 150px"
               onerror="this.style.display='none'">
        </div>
        <div style="flex: 15%" class="d-flex flex-column align-items-end gap-2">
          <button class="btn btn-sm btn-outline-danger" onclick="disableRecord(this)">Ocultar</button>
          ${
            hasProyecto
              ? `<button class="btn btn-sm btn-outline-primary" onclick="searchInquiryByProject(this, '${sanitizedProyecto.replace(/'/g, "\\'")}')">Buscar Inquiry para ${sanitizedProyecto}</button>`
              : ""
          }
        </div>
      `;
        return li;
      }

      function disableRecord(button) {
        const listItem = button.closest("li");
        if (listItem) {
          listItem.classList.add("disabled-record");
        }
      }

      function displayAllProducts() {
        resultsProducts.querySelectorAll(".disabled-record").forEach((el) => {
          el.classList.remove("disabled-record");
        });
      }

      function displayAllInvoices() {
        resultsInvoices.querySelectorAll(".disabled-record").forEach((el) => {
          el.classList.remove("disabled-record");
        });
      }

      function printSection(container) {
        const printableContent = document.createElement("div");
        container.querySelectorAll(".result-set").forEach((set) => {
          const clone = set.cloneNode(true);
          clone
            .querySelectorAll("li:not(.disabled-record) button")
            .forEach((btn) => btn.remove());
          clone
            .querySelectorAll(".disabled-record")
            .forEach((el) => el.remove());
          printableContent.appendChild(clone);
        });
        const printWindow = window.open("", "_blank");
        printWindow.document.write(
          "<html><head><title>Resultados para Imprimir</title>"
        );
        printWindow.document.write(
          '<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">'
        );
        printWindow.document.write(
          "<style>.result-list li { display: block; }</style>"
        );
        printWindow.document.write("</head><body>");
        printWindow.document.write(printableContent.innerHTML);
        printWindow.document.write("</body></html>");
        printWindow.document.close();
        printWindow.print();
      }

      function printProductResults() {
        printSection(resultsProducts);
      }

      function printInvoiceResultsMain() {
        printSection(document.getElementById("invoice-main-pane"));
      }

      async function exportProductResults() {
        const idsToExport = Array.from(
          resultsProducts.querySelectorAll("li")
        )
          .filter((li) => !li.classList.contains("disabled-record"))
          .map((li) => li.dataset.id);
        if (idsToExport.length === 0) {
          alert("No hay registros visibles para exportar.");
          return;
        }
        const response = await fetch("/export", {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({ ids: idsToExport }),
        });
        if (response.ok) {
          const blob = await response.blob();
          const url = window.URL.createObjectURL(blob);
          const a = document.createElement("a");
          a.style.display = "none";
          a.href = url;
          a.download = "productos.xlsx";
          document.body.appendChild(a);
          a.click();
          window.URL.revokeObjectURL(url);
        } else {
          alert("Error al exportar los datos.");
        }
      }

      function exportInvoiceResultsMain() {
        alert("Exportar invoices aún no está implementado.");
      }

      function slugify(text) {
        return text
          .toString()
          .toLowerCase()
          .trim()
          .replace(/[^a-z0-9]+/g, "-")
          .replace(/^-+|-+$/g, "");
      }

      function sanitizeProyectoId(value) {
        const match = (value || "").toUpperCase().match(/[A-Z&]{2,}[0-9]{3,}/);
        return match ? match[0] : "";
      }

      function ensureInvoiceTab(tabId, title, invoiceCardHtml) {
        if (!document.getElementById(`${tabId}-tab`)) {
          const li = document.createElement("li");
          li.className = "nav-item";
          li.role = "presentation";
          li.innerHTML = `
            <button
              class="nav-link"
              id="${tabId}-tab"
              data-bs-toggle="tab"
              data-bs-target="#${tabId}-pane"
              type="button"
              role="tab"
              aria-controls="${tabId}-pane"
              aria-selected="false"
            >
              ${title}
            </button>
          `;
          invoiceTabsNav.appendChild(li);

          const pane = document.createElement("div");
          pane.className = "tab-pane fade";
          pane.id = `${tabId}-pane`;
          pane.role = "tabpanel";
          pane.tabIndex = 0;
          pane.setAttribute("aria-labelledby", `${tabId}-tab`);
          pane.innerHTML = `
            <div class="card mb-3 mt-3">
              <div class="card-body d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Invoice & Inquiries: ${title}</h5>
                <div class="d-flex gap-2">
                  <button
                    class="btn btn-sm btn-outline-secondary"
                    onclick="printInvoiceTab('${tabId}')"
                  >
                    Imprimir Visibles
                  </button>
                  <button
                    class="btn btn-sm btn-outline-success"
                    onclick="exportInvoiceTab('${tabId}')"
                  >
                    Exportar (Próximamente)
                  </button>
                  <button class="btn btn-sm btn-outline-info" onclick="displayAllInvoiceTab('${tabId}')">
                    Mostrar Todos
                  </button>
                </div>
              </div>
            </div>
            <div class="result-set mb-3">
              <ul class="result-list" id="${tabId}-invoice-card"></ul>
            </div>
            <div id="${tabId}-inquiries"></div>
          `;
          invoiceTabsContent.appendChild(pane);

          if (invoiceCardHtml) {
            const ul = pane.querySelector(`#${tabId}-invoice-card`);
            ul.innerHTML = invoiceCardHtml;
          }
        }
      }

      function activateInvoiceTab(tabId) {
        const tabButton = document.getElementById(`${tabId}-tab`);
        if (tabButton) {
          const tab = new bootstrap.Tab(tabButton);
          tab.show();
        }
      }

      async function searchInquiryByProject(button, proyectoRaw) {
        const proyectoSanitized = sanitizeProyectoId(proyectoRaw || "");
        if (!proyectoSanitized) return;
        const slug = slugify(proyectoSanitized) || `inv-tab-${Date.now()}`;
        const tabId = `invoice-${slug}`;

        const invoiceCard = button.closest("li");
        const invoiceCardHtml = invoiceCard ? invoiceCard.outerHTML : "";

        ensureInvoiceTab(tabId, proyectoSanitized, invoiceCardHtml);

        // fetch inquiries (products) for this proyecto
        try {
          const response = await fetch("/search-inquiries-by-project", {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify({ proyecto: proyectoSanitized }),
          });
          const data = await response.json();
          const inquiries = data.results || [];

          const pane = document.getElementById(`${tabId}-pane`);
          const inquiriesContainer = pane.querySelector(`#${tabId}-inquiries`);

          inquiriesContainer.innerHTML = "";

          if (inquiries.length === 0) {
            const noResultsDiv = document.createElement("div");
            noResultsDiv.className = "alert alert-info text-center";
            noResultsDiv.innerHTML = `
              <h4 class="alert-heading">No se encontraron inquiries</h4>
              <p class="mb-0">No hay inquiries para este proyecto.</p>
            `;
            inquiriesContainer.appendChild(noResultsDiv);
          } else {
            const resultSetDiv = document.createElement("div");
            resultSetDiv.className = "result-set";
            const header = `
              <div class="result-header">
                <h5 class="mb-0">Inquiries vinculadas al proyecto: ${proyectoSanitized}</h5>
                <small class="text-muted">Coincidencia por PROYECTO</small>
              </div>
            `;
            const list = document.createElement("ul");
            list.className = "result-list";
            inquiries.forEach((rec) => {
              const li = renderProductCard(rec);
              if (li) list.appendChild(li);
            });
            resultSetDiv.innerHTML = header;
            resultSetDiv.appendChild(list);
            inquiriesContainer.appendChild(resultSetDiv);
          }

          activateInvoiceTab(tabId);
        } catch (err) {
          console.error("Error fetching inquiries by project", err);
          alert("Error al buscar inquiries para este proyecto.");
        }
      }

      function displayAllInvoiceTab(tabId) {
        const pane = document.getElementById(`${tabId}-pane`);
        if (!pane) return;
        pane.querySelectorAll(".disabled-record").forEach((el) => {
          el.classList.remove("disabled-record");
        });
      }

      function printInvoiceTab(tabId) {
        const pane = document.getElementById(`${tabId}-pane`);
        if (!pane) return;
        const printableContent = document.createElement("div");
        pane.querySelectorAll(".result-set").forEach((set) => {
          const clone = set.cloneNode(true);
          clone
            .querySelectorAll("li:not(.disabled-record) button")
            .forEach((btn) => btn.remove());
          clone
            .querySelectorAll(".disabled-record")
            .forEach((el) => el.remove());
          printableContent.appendChild(clone);
        });
        const printWindow = window.open("", "_blank");
        printWindow.document.write(
          "<html><head><title>Resultados para Imprimir</title>"
        );
        printWindow.document.write(
          '<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">'
        );
        printWindow.document.write(
          "<style>.result-list li { display: block; }</style>"
        );
        printWindow.document.write("</head><body>");
        printWindow.document.write(printableContent.innerHTML);
        printWindow.document.write("</body></html>");
        printWindow.document.close();
        printWindow.print();
      }

